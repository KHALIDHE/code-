    <script>
        // Data Storage
        const technologies = [
            { name: 'Modeling Systeme', target: 60, completed: 0, hours: 0 },
            { name: 'Machine Learning', target: 48, completed: 0, hours: 0 },
            { name: 'Deep Learning', target: 48, completed: 0, hours: 0 },
            { name: 'DevOps', target: 40, completed: 0, hours: 0 },
            { name: 'Data Science', target: 40, completed: 0, hours: 0 },
            { name: 'Blockchain', target: 32, completed: 0, hours: 0 },
            { name: 'Projet with Youssef & Coworker', target: 30, completed: 0, hours: 0 },
            { name: 'Projet Personnel & Recherche des Stages', target: 25, completed: 0, hours: 0 },
            { name: 'Find Job & Freelancing', target: 20, completed: 0, hours: 0 },
            { name: 'Security & Administration Base de Donner', target: 35, completed: 0, hours: 0 },
            { name: 'Project with Youness', target: 30, completed: 0, hours: 0 }
        ];

        let sessions = [];
        let timerInterval = null;
        let timerSeconds = 0;
        let isTimerRunning = false;

        // Load data from localStorage
        function loadData() {
            const savedTech = localStorage.getItem('technologies');
            const savedSessions = localStorage.getItem('sessions');

            if (savedTech) {
                const loaded = JSON.parse(savedTech);
                loaded.forEach((tech, i) => {
                    if (technologies[i]) {
                        technologies[i].completed = tech.completed || 0;
                        technologies[i].hours = tech.hours || 0;
                    }
                });
            }

            if (savedSessions) {
                sessions = JSON.parse(savedSessions);
            }
        }

        // Save data to localStorage
        function saveData() {
            localStorage.setItem('technologies', JSON.stringify(technologies));
            localStorage.setItem('sessions', JSON.stringify(sessions));
        }

        // Page Navigation
        function showPage(pageId) {
            document.querySelectorAll('.page-section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
        }

        // Countdown Timer
        function updateCountdown() {
            const endDate = new Date('2025-06-01');
            const now = new Date();
            const diff = endDate - now;

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

            document.getElementById('countdown').textContent = 
                `${days}d ${hours}h ${minutes}m until mastery`;
        }

        // Update Stats
        function updateStats() {
            const totalSessions = sessions.length;
            const totalHours = sessions.reduce((sum, s) => sum + parseFloat(s.duration), 0);
            
            // Calculate streak
            let streak = 0;
            const today = new Date().toISOString().split('T')[0];
            const sortedSessions = [...sessions].sort((a, b) => new Date(b.date) - new Date(a.date));
            
            if (sortedSessions.length > 0 && sortedSessions[0].date === today) {
                streak = 1;
                let currentDate = new Date(today);
                for (let i = 1; i < sortedSessions.length; i++) {
                    currentDate.setDate(currentDate.getDate() - 1);
                    const prevDate = currentDate.toISOString().split('T')[0];
                    if (sortedSessions[i].date === prevDate) {
                        streak++;
                    } else {
                        break;
                    }
                }
            }

            // Calculate overall progress
            const totalTarget = technologies.reduce((sum, t) => sum + t.target, 0);
            const totalCompleted = technologies.reduce((sum, t) => sum + t.completed, 0);
            const overallProgress = Math.round((totalCompleted / totalTarget) * 100);

            document.getElementById('totalSessions').textContent = totalSessions;
            document.getElementById('totalHours').textContent = totalHours.toFixed(1);
            document.getElementById('streak').textContent = streak;
            document.getElementById('overallProgress').textContent = overallProgress + '%';
        }

        // Render Technologies
        function renderTechnologies() {
            const grid = document.getElementById('techGrid');
            grid.innerHTML = '';

            technologies.forEach((tech, index) => {
                const progress = Math.round((tech.completed / tech.target) * 100);
                let status = 'Not Started';
                let statusClass = 'status-not-started';

                if (progress > 0 && progress < 25) {
                    status = 'üî¥ Beginning';
                    statusClass = 'status-beginning';
                } else if (progress >= 25 && progress < 50) {
                    status = 'üü° In Progress';
                    statusClass = 'status-progress';
                } else if (progress >= 50 && progress < 75) {
                    status = 'üü† Advanced';
                    statusClass = 'status-advanced';
                } else if (progress >= 75) {
                    status = 'üü¢ Mastered';
                    statusClass = 'status-mastered';
                }

                const card = document.createElement('div');
                card.className = 'tech-card';
                card.innerHTML = `
                    <div class="tech-header">
                        <div class="tech-name">${tech.name}</div>
                        <div style="display: flex; gap: 0.5rem; align-items: center;">
                            <div class="tech-status ${statusClass}">${status}</div>
                            <button class="delete-btn" onclick="deleteTechnology(${index})" title="Delete this module">‚úï</button>
                        </div>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${progress}%"></div>
                    </div>
                    <div class="tech-stats">
                        <span>Sessions: <strong>${tech.completed}/${tech.target}</strong></span>
                        <span>Hours: <strong>${tech.hours.toFixed(1)}</strong></span>
                        <span>Progress: <strong>${progress}%</strong></span>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        // Add New Technology
        function addNewTechnology() {
            const name = prompt('Enter module name:', 'New Module');
            if (!name) return;

            const target = parseInt(prompt('Enter target number of sessions:', '30'));
            if (!target || target <= 0) {
                alert('Invalid target number!');
                return;
            }

            technologies.push({
                name: name,
                target: target,
                completed: 0,
                hours: 0
            });

            saveData();
            renderTechnologies();
            updateTechnologySelects();
            alert('‚úÖ Module added successfully! üî•');
        }

        // Delete Technology
        function deleteTechnology(index) {
            if (!confirm(`Are you sure you want to delete "${technologies[index].name}"?`)) return;

            const techName = technologies[index].name;
            
            // Remove all sessions for this technology
            sessions = sessions.filter(s => s.tech !== techName);
            
            // Remove the technology
            technologies.splice(index, 1);
            
            saveData();
            renderTechnologies();
            renderSessions();
            updateStats();
            updateTechnologySelects();
            
            alert('Module deleted successfully!');
        }

        // Update technology selects (in timer and session form)
        function updateTechnologySelects() {
            const timerSelect = document.getElementById('timerTech');
            const sessionSelect = document.getElementById('sessionTech');

            if (timerSelect) {
                timerSelect.innerHTML = technologies.map(t => `<option>${t.name}</option>`).join('');
            }

            if (sessionSelect) {
                sessionSelect.innerHTML = technologies.map(t => `<option>${t.name}</option>`).join('');
            }
        }

        // Render Sessions
        function renderSessions() {
            const list = document.getElementById('sessionsList');
            list.innerHTML = '';

            const sortedSessions = [...sessions].sort((a, b) => new Date(b.date) - new Date(a.date));

            sortedSessions.forEach((session) => {
                const originalIndex = sessions.indexOf(session);
                const item = document.createElement('div');
                item.className = 'session-item';
                item.innerHTML = `
                    <div class="session-header">
                        <div class="session-tech">${session.tech}</div>
                        <div style="display: flex; gap: 1rem; align-items: center;">
                            <div class="session-date">${session.date}</div>
                            <button class="delete-btn" onclick="deleteSession(${originalIndex})">DELETE</button>
                        </div>
                    </div>
                    <div class="session-duration">${session.duration}h</div>
                    <div class="session-details"><strong>Topics:</strong> ${session.topics}</div>
                    ${session.notes ? `<div class="session-details"><strong>Notes:</strong> ${session.notes}</div>` : ''}
                `;
                list.appendChild(item);
            });
        }

        // Add Session
        function addSession() {
            const tech = document.getElementById('sessionTech').value;
            const duration = parseFloat(document.getElementById('sessionDuration').value);
            const date = document.getElementById('sessionDate').value;
            const topics = document.getElementById('sessionTopics').value;
            const notes = document.getElementById('sessionNotes').value;

            if (!duration || !date || !topics) {
                alert('Please fill in all required fields!');
                return;
            }

            const session = { tech, duration, date, topics, notes };
            sessions.push(session);

            // Update technology stats
            const techIndex = technologies.findIndex(t => t.name === tech);
            if (techIndex !== -1) {
                technologies[techIndex].completed++;
                technologies[techIndex].hours += duration;
            }

            saveData();
            renderSessions();
            renderTechnologies();
            updateStats();

            // Clear form
            document.getElementById('sessionDuration').value = '';
            document.getElementById('sessionDate').value = '';
            document.getElementById('sessionTopics').value = '';
            document.getElementById('sessionNotes').value = '';

            alert('Session added successfully! üî•');
        }

        // Delete Session
        function deleteSession(index) {
            if (!confirm('Are you sure you want to delete this session?')) return;

            const session = sessions[index];
            
            // Update technology stats
            const techIndex = technologies.findIndex(t => t.name === session.tech);
            if (techIndex !== -1) {
                technologies[techIndex].completed--;
                technologies[techIndex].hours -= session.duration;
            }

            sessions.splice(index, 1);
            saveData();
            renderSessions();
            renderTechnologies();
            updateStats();
        }

        // Timer Functions
        function setTimer(minutes) {
            timerSeconds = minutes * 60;
            updateTimerDisplay();
        }

        function updateTimerDisplay() {
            const hours = Math.floor(timerSeconds / 3600);
            const minutes = Math.floor((timerSeconds % 3600) / 60);
            const seconds = timerSeconds % 60;

            document.getElementById('timerDisplay').textContent = 
                `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }

        function startTimer() {
            if (isTimerRunning) return;
            
            isTimerRunning = true;
            timerInterval = setInterval(() => {
                timerSeconds++;
                updateTimerDisplay();
            }, 1000);
        }

        function pauseTimer() {
            isTimerRunning = false;
            clearInterval(timerInterval);
        }

        function resetTimer() {
            pauseTimer();
            timerSeconds = 0;
            updateTimerDisplay();
        }

        function saveSession() {
            if (timerSeconds < 60) {
                alert('Session too short! Study for at least 1 minute.');
                return;
            }

            const tech = document.getElementById('timerTech').value;
            const duration = (timerSeconds / 3600).toFixed(2);
            const date = new Date().toISOString().split('T')[0];
            const topics = prompt('What topics did you cover?', '');

            if (!topics) return;

            const session = {
                tech,
                duration: parseFloat(duration),
                date,
                topics,
                notes: `Timer session: ${Math.floor(timerSeconds / 60)} minutes`
            };

            sessions.push(session);

            // Update technology stats
            const techIndex = technologies.findIndex(t => t.name === tech);
            if (techIndex !== -1) {
                technologies[techIndex].completed++;
                technologies[techIndex].hours += parseFloat(duration);
            }

            saveData();
            renderSessions();
            renderTechnologies();
            updateStats();

            resetTimer();
            alert('Session saved! üî• Keep going!');
        }

        // Initialize
        function init() {
            loadData();
            updateCountdown();
            updateStats();
            renderTechnologies();
            renderSessions();
            updateTechnologySelects();
            updateBackupInfo();
            checkAutoBackup();
            
            // Set today's date as default
            document.getElementById('sessionDate').value = new Date().toISOString().split('T')[0];

            // Update countdown every minute
            setInterval(updateCountdown, 60000);
            
            // Check auto-backup daily
            setInterval(checkAutoBackup, 86400000); // 24 hours
        }

        // Export Data
        function exportData() {
            const data = {
                technologies: technologies,
                sessions: sessions,
                exportDate: new Date().toISOString(),
                version: '1.0'
            };

            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            
            const filename = `comeback-backup-${new Date().toISOString().split('T')[0]}.json`;
            link.download = filename;
            
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);

            // Update last backup date
            localStorage.setItem('lastBackupDate', new Date().toISOString());
            
            // Increment backup counter
            const backupCount = parseInt(localStorage.getItem('backupCount') || '0') + 1;
            localStorage.setItem('backupCount', backupCount.toString());
            
            updateBackupInfo();
            alert('‚úÖ Backup downloaded successfully! Save it somewhere safe. üî•');
        }

        // Import Data
        function importData(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    
                    // Validate data
                    if (!data.technologies || !data.sessions) {
                        alert('‚ùå Invalid backup file! Please select a valid backup.');
                        return;
                    }

                    // Confirm before overwriting
                    if (!confirm('‚ö†Ô∏è This will replace ALL your current data. Are you sure?')) {
                        return;
                    }

                    // Restore data
                    technologies.length = 0;
                    technologies.push(...data.technologies);
                    
                    sessions.length = 0;
                    sessions.push(...data.sessions);

                    // Save to localStorage
                    saveData();
                    
                    // Refresh UI
                    renderTechnologies();
                    renderSessions();
                    updateStats();
                    updateTechnologySelects();
                    updateBackupInfo();

                    alert('‚úÖ Data restored successfully! Welcome back to your comeback! üî•');
                    
                } catch (error) {
                    alert('‚ùå Error reading backup file! Make sure it\'s a valid JSON file.');
                    console.error(error);
                }
            };
            reader.readAsText(file);
            
            // Reset file input
            event.target.value = '';
        }

        // Reset All Data
        function resetAllData() {
            if (!confirm('‚ö†Ô∏è WARNING: This will DELETE ALL your data permanently!')) {
                return;
            }
            
            if (!confirm('‚ö†Ô∏è FINAL WARNING: Are you ABSOLUTELY sure? This cannot be undone!')) {
                return;
            }

            // Clear all data
            technologies.forEach(tech => {
                tech.completed = 0;
                tech.hours = 0;
            });
            
            sessions.length = 0;

            // Clear localStorage
            localStorage.clear();
            
            // Refresh UI
            renderTechnologies();
            renderSessions();
            updateStats();
            updateBackupInfo();

            alert('üîÑ All data has been reset. Fresh start! Let\'s go! üí™');
        }

        // Toggle Auto-Backup
        function toggleAutoBackup() {
            const enabled = document.getElementById('autoBackup').checked;
            localStorage.setItem('autoBackupEnabled', enabled.toString());
            
            if (enabled) {
                const nextDate = new Date();
                nextDate.setDate(nextDate.getDate() + 7);
                localStorage.setItem('nextAutoBackup', nextDate.toISOString());
                alert('‚úÖ Auto-backup enabled! You\'ll get a weekly backup automatically.');
            } else {
                localStorage.removeItem('nextAutoBackup');
                alert('Auto-backup disabled.');
            }
            
            updateBackupInfo();
        }

        // Check Auto-Backup
        function checkAutoBackup() {
            const enabled = localStorage.getItem('autoBackupEnabled') === 'true';
            if (!enabled) return;

            const nextBackupStr = localStorage.getItem('nextAutoBackup');
            if (!nextBackupStr) return;

            const nextBackup = new Date(nextBackupStr);
            const now = new Date();

            if (now >= nextBackup) {
                exportData();
                
                // Schedule next backup
                const newNextDate = new Date();
                newNextDate.setDate(newNextDate.getDate() + 7);
                localStorage.setItem('nextAutoBackup', newNextDate.toISOString());
                
                updateBackupInfo();
            }
        }

        // Update Backup Info
        function updateBackupInfo() {
            // Last backup
            const lastBackupStr = localStorage.getItem('lastBackupDate');
            const lastBackupEl = document.getElementById('lastBackup');
            if (lastBackupEl) {
                if (lastBackupStr) {
                    const date = new Date(lastBackupStr);
                    lastBackupEl.textContent = date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
                } else {
                    lastBackupEl.textContent = 'Never';
                }
            }

            // Next auto-backup
            const autoBackupEnabled = localStorage.getItem('autoBackupEnabled') === 'true';
            const autoBackupCheckbox = document.getElementById('autoBackup');
            if (autoBackupCheckbox) {
                autoBackupCheckbox.checked = autoBackupEnabled;
            }

            const nextBackupEl = document.getElementById('nextBackup');
            if (nextBackupEl) {
                if (autoBackupEnabled) {
                    const nextBackupStr = localStorage.getItem('nextAutoBackup');
                    if (nextBackupStr) {
                        const date = new Date(nextBackupStr);
                        nextBackupEl.textContent = date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
                    } else {
                        nextBackupEl.textContent = 'Not scheduled';
                    }
                } else {
                    nextBackupEl.textContent = 'Not scheduled';
                }
            }

            // Data statistics
            const dataSessionsEl = document.getElementById('dataSessions');
            if (dataSessionsEl) {
                dataSessionsEl.textContent = sessions.length;
            }

            const dataProjectsEl = document.getElementById('dataProjects');
            if (dataProjectsEl) {
                dataProjectsEl.textContent = projects.length;
            }

            const dataSizeEl = document.getElementById('dataSize');
            if (dataSizeEl) {
                const dataStr = JSON.stringify({ technologies, projects, sessions });
                const sizeKB = (new Blob([dataStr]).size / 1024).toFixed(2);
                dataSizeEl.textContent = sizeKB + ' KB';
            }

            const dataBackupsEl = document.getElementById('dataBackups');
            if (dataBackupsEl) {
                const backupCount = localStorage.getItem('backupCount') || '0';
                dataBackupsEl.textContent = backupCount;
            }
        }

        // Start app
        init();
    </script>
</body>
</html>
