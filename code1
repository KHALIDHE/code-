                            </select>
                        </div>
                        <div class="form-group">
                            <label>Duration (hours)</label>
                            <input type="number" id="sessionDuration" step="0.5" min="0.5" placeholder="2.5">
                        </div>
                        <div class="form-group">
                            <label>Date</label>
                            <input type="date" id="sessionDate">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Topics Covered</label>
                        <input type="text" id="sessionTopics" placeholder="Linear Algebra, Matrix Operations...">
                    </div>
                    <div class="form-group">
                        <label>Notes</label>
                        <textarea id="sessionNotes" rows="3" placeholder="What did you learn? Any challenges?"></textarea>
                    </div>
                    <button class="btn btn-primary" onclick="addSession()" style="margin-top: 1rem;">ADD SESSION</button>
                </div>

                <div class="sessions-list" id="sessionsList">
                    <!-- Sessions will be populated by JavaScript -->
                </div>
            </div>
        </div>

        <!-- BACKUP PAGE -->
